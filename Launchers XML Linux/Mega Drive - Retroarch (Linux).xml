<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<advanced_emulator_launcher_configuration>
<launcher>
  <category>SEGA</category>
  <name>Mega Drive (Retroarch)</name>
  <Launcher_NFO>../Launcher assets SEGA/Genesis.nfo</Launcher_NFO>
  <platform>Sega MegaDrive</platform>
  <application>/usr/bin/retroarch</application>
  <args>-L /usr/lib/x86_64-linux-gnu/libretro/genesis_plus_gx_libretro.so -f -v &quot;$rom$&quot;</args>
  <args_extra>-L /usr/lib/x86_64-linux-gnu/libretro/picodrive_libretro.so -f -v &quot;$rom$&quot;</args_extra>
  <ROM_path>/media/storage/Roms/sega-genesis/</ROM_path>
  <ROM_ext>smd|md|bin|zip</ROM_ext>
  <ROM_asset_path>/media/storage/Assets/sega-genesis/</ROM_asset_path>
  <Asset_Prefix>../Launcher assets SEGA/Mega Drive</Asset_Prefix>
</launcher>
</advanced_emulator_launcher_configuration>
